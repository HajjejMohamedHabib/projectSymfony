<body>
<table class="table">
    <tr>
        <th>first name</th>
        <th>last name</th>
        <th>age</th>
    </tr>
    {% for user in users %}
      <tr class="table-{% if loop.index is even %}primary{% else %}success{% endif %}">
          <td>{{ user.firstname }}</td>
          <td>{{ user.lastname }}</td>
          <td>{{ user.age }}</td>
      </tr>
    {% endfor %}
</table>
