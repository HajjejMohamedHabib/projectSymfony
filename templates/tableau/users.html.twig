{% extends 'template.html.twig' %}
{% block title %}
  Display Users
{% endblock %}
{% block pageTitle %}
   list of users
{% endblock %}
{% block body %}
    {% include ('fragments/date-jour.html.twig') %}
<table class="table">
    <tr>
        <th>first name</th>
        <th>last name</th>
        <th>age</th>
    </tr>
    {% for user in users %}
      <tr class="table-{% if loop.index is even %}primary{% else %}success{% endif %}">
          <td>{{ user.firstname }}</td>
          <td>{{ user.lastname }}</td>
          <td>{{ user.age }}</td>
      </tr>
    {% endfor %}
</table>
{% endblock %}