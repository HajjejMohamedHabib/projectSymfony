{% extends 'template.html.twig' %}
{% block title %}
Liste de personnes
{% endblock %}
{% block pageTitle %}
Person List
{% endblock %}
{% block body %}
<div class="row">
    {% for personne in personnes  %}
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">{{ personne.firstname }}</h5>
            <h6 class="card-subtitle mb-2 text-muted">{{ personne.lastname }}</h6>
            <p class="card-text"> {{ personne.age}} ans</p>
            <a href="{{ path('personne.detail',{id :personne.id}) }}" class="card-link">
                <i class="fa-solid fa-circle-info"></i>
            </a>
            <a href="{{ path('personne.delete',{id :personne.id}) }}" class="card-link">
                <i class="fa-solid fa-user-xmark"></i>
            </a>
            <a href="{{ path('personne.update',{id :personne.id}) }}" class="card-link">
                <i class="fa-solid fa-user-pen"></i>
            </a>

        </div>

    </div>
    {% endfor %}
</div>
    {% if isPagination is defined and isPagination==true %}
        

    <div class="row mt-2">
        <nav aria-label="col Page navigation example">
            <ul class="pagination">
                {% if page>1 %}
                    <li class="page-item"><a class="page-link" href="{{ path('personne.all',{page : page-1,nbre :nbre}) }}">Previous</a></li>
                {% endif %}

                {% for i in range(1,nbPages)  %}
                    <li class="page-item"><a class="page-link" href="{{ path('personne.all',{page : i,nbre :nbre}) }}">{{ i }}</a></li>
                {% endfor %}
                {% if page<nbPages %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('personne.all',{page : page+1,nbre :nbre}) }}">Next</a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    </div>
    {% endif %}
{% endblock %}